<Window x:Class="Biblioteka.AddAuthorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Biblioteka"
        mc:Ignorable="d"
        Title="Menu" Height="250" Width="420"
        ResizeMode="NoResize">
    <Grid Width="400" Height="200">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="exceptions"  Grid.Row="0" Foreground="Red" Visibility="Hidden"/>
        <TextBlock Grid.Row="1" Text="Imię" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <TextBox Grid.Row="2" x:Name="firstname" VerticalContentAlignment="Center"/>
        <TextBlock Grid.Row="3" Text="Nazwisko" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <TextBox Grid.Row="4" x:Name="lastname" VerticalContentAlignment="Center"/>
        <Button Grid.Row="5" Content="Prześlij" Margin="0,5,0,2" Click="Submit_Click"/>
        <Button Grid.Row="6" Content="Powrót" Margin="0,2,0,5" Click="Back_Click"/>
        
    </Grid>
</Window>
