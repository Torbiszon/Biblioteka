<Window x:Class="Biblioteka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Biblioteka"
        mc:Ignorable="d"
        Title="Logowanie" Height="450" Width="800">
    <Grid Width="400" Height="200">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="exceptions"  Grid.Row="0" Foreground="Red" Visibility="Hidden"/>
        <TextBlock Text="Nazwa użytkownika" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <TextBox x:Name="login" Grid.Row="1" VerticalContentAlignment="Center"/>
        <TextBlock Grid.Row="2" Text="Hasło" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <PasswordBox x:Name="password" Grid.Row="3" VerticalContentAlignment="Center"/>
        <Button Grid.Row="4" Content="Login" Margin="0,5,0,2" Click="Login_Click"/>
        <Button Grid.Row="5" Content="Rejestracja" Margin="0,2,0,5" Click="Register_Click"/>
    </Grid>
</Window>
